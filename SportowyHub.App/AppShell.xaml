<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SportowyHub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:home="clr-namespace:SportowyHub.Views.Home"
    xmlns:search="clr-namespace:SportowyHub.Views.Search"
    xmlns:favorites="clr-namespace:SportowyHub.Views.Favorites"
    xmlns:profile="clr-namespace:SportowyHub.Views.Profile"
    xmlns:res="clr-namespace:SportowyHub.Resources.Strings"
    Title="SportowyHub">

    <TabBar>
        <Tab Title="{x:Static res:AppResources.TabHome}" Icon="icon_home.svg">
            <ShellContent AutomationId="TabHome" ContentTemplate="{DataTemplate home:HomePage}" />
        </Tab>
        <Tab Title="{x:Static res:AppResources.TabSearch}" Icon="icon_search.svg">
            <ShellContent AutomationId="TabSearch" ContentTemplate="{DataTemplate search:SearchPage}" />
        </Tab>
        <Tab Title="{x:Static res:AppResources.TabFavorites}" Icon="icon_favorites.svg">
            <ShellContent AutomationId="TabFavorites" ContentTemplate="{DataTemplate favorites:FavoritesPage}" />
        </Tab>
        <Tab Title="{x:Static res:AppResources.TabProfile}" Icon="icon_profile.svg">
            <ShellContent AutomationId="TabProfile" ContentTemplate="{DataTemplate profile:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
