<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SportowyHub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:home="clr-namespace:SportowyHub.Views.Home"
    xmlns:search="clr-namespace:SportowyHub.Views.Search"
    xmlns:favorites="clr-namespace:SportowyHub.Views.Favorites"
    xmlns:profile="clr-namespace:SportowyHub.Views.Profile"
    Title="SportowyHub">

    <TabBar>
        <Tab Title="Home" Icon="icon_home.svg">
            <ShellContent ContentTemplate="{DataTemplate home:HomePage}" />
        </Tab>
        <Tab Title="Search" Icon="icon_search.svg">
            <ShellContent ContentTemplate="{DataTemplate search:SearchPage}" />
        </Tab>
        <Tab Title="Favorites" Icon="icon_favorites.svg">
            <ShellContent ContentTemplate="{DataTemplate favorites:FavoritesPage}" />
        </Tab>
        <Tab Title="Profile" Icon="icon_profile.svg">
            <ShellContent ContentTemplate="{DataTemplate profile:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>